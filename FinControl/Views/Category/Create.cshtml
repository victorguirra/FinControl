@model FinControl.Models.Category;
@{
    ViewData["Title"] = "Create";
}

<br />
<h5>Nova Categoria</h5>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="radio" id="radioleft" name="Type" value="Despesa" checked />
                <label class="labelRadio" for="radioleft">Despesa</label>
                
                <input type="radio" id="radiomiddle" name="Type" value="Renda" />
                <label class="labelRadio" for="radiomiddle">Renda</label>
            </div>

            <div class="form-group">
                <label class="control-label">Título</label>
                <input asp-for="Title" class="form-control" required/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    
</div>