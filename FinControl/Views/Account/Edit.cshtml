@model FinControl.Models.Account;
@{
    ViewData["Title"] = "Edit";
}

<br />
<h5>Editar Conta</h5>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="AccountId" value="@Model.AccountId" />

            <div class="form-group">
                <label class="control-label">Nome Banco</label>
                <input asp-for="BankName" class="form-control" required value="@Model.BankName"/>
                <span asp-validation-for="BankName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Tipo Conta</label>
                <select name="accountType" id="accountType" class="form-control">
                    <option disabled class="text-muted">Selecione uma opção</option>
                    <option value="Conta Corrente" selected="@(Model.AccountType == "Conta Corrente")">Conta Corrente</option>
                    <option value="Conta Poupança" selected="@(Model.AccountType == "Conta Poupança")">Conta Poupança</option>
                    <option value="Conta Salário" selected="@(Model.AccountType == "Conta Salário")">Conta Salário</option>
                </select>
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Agência</label>
                <input asp-for="BankBranch" class="form-control" required value="@Model.BankBranch" />
                <span asp-validation-for="BankBranch" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Número da Conta</label>
                <input asp-for="AccountNumber" class="form-control" required value="@Model.AccountNumber" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>