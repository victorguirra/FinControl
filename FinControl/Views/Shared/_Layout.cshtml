<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinControl</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinControl.styles.css" asp-append-version="true" />

</head>
<body class="e-bigger">
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <div class="row" style="width:100%">
                        <div class="col-md-10" style="display:flex;align-items:center;">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-style: italic;">FinControl</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a style="font-size:14px;" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                                    </li>
                                    <li class="nav-item">
                                        <a style="font-size:14px;" class="nav-link text-dark" asp-area="" asp-controller="Transaction" asp-action="Index">Transações</a>
                                    </li>
                                    <li class="nav-item">
                                        <a style="font-size:14px;" class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Categorias</a>
                                    </li>
                                    <li class="nav-item">
                                        <a style="font-size:14px;" class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index">Contas</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-2" style="display:flex;justify-content:end;">
                            <a style="font-size:14px;" class="nav-link text-dark" href="/Identity/Account/Logout">Sair do sistema</a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - FinControl
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <ejs-scripts></ejs-scripts>
</body>
</html>
