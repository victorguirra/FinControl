@model FinControl.ViewModels.DashboardViewModel;
@{
    ViewData["Title"] = "Dashboard";
}

<br />
<div class="text-center">
    <h3 style="font-style: italic;">FinControl</h3><br />
    <span style="font-size:14px;" class="text-muted">Dashboard de suas transações financeiras.</span><br />
    <span style="font-size:14px;" class="text-muted">Crie categorias e cadastre suas transações para visualizar seus resultados!</span>

    <br />
    <br />
    <div class="row">
        <div class="col-md-3"></div>

        <div class="col-md-6">
            <a class="btn btn-primary" asp-controller="Transaction" asp-action="Index" style="font-size:13px;margin-right:20px;">Transações</a>
            <a class="btn btn-primary" asp-controller="Category" asp-action="Index" style="font-size:13px;">Categorias</a>
        </div>

        <div class="col-md-3"></div>
    </div>
</div>
<hr />
<br />

<div class="row text-center">
    <div class="col-md-4">
        <div class="card">
            <h6 class="card-header">Total Despesas</h6>
            <div class="card-body">
                <h4 style="font-weight:bold" class="text-danger">@Model.TotalExpense.ToString("C2")</h4>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <h6 class="card-header">Total Renda</h6>
            <div class="card-body">
                <h4 style="font-weight:bold" class="text-success">@Model.TotalIncome.ToString("C2")</h4>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <h6 class="card-header">Saldo</h6>
            <div class="card-body">
                <h4 style="font-weight:bold">@Model.Balance.ToString("C2")</h4>
            </div>
        </div>
    </div>
</div>

<br />
<br />

<div class="row text-center">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card">
            <h6 class="card-header">Recomendação Poupança</h6>
            <div class="card-body">
                <span style="font-size:13px;">Recomendamos que você guarde pelo menos 15% de sua renda total.</span><br />
                <span style="font-size:13px;">Isso, em sua renda atual, daria aproximadamente:</span><br /><br />
                <h4 style="font-weight:bold" class="text-primary">@Model.Savings.ToString("C2")</h4>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
